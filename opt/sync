#!/usr/bin/env bash

world_name="${WORLD_NAME:-default}"

if [ -n "$AWS_BUCKET" ]; then
  cat << EOF > .s3cfg
[default]
access_key = ${AWS_ACCESS_KEY}
secret_key = ${AWS_SECRET_KEY}
EOF
  if [ -d world ]; then
    s3cmd sync world/ s3://${AWS_BUCKET}/${WORLD_NAME}/world/
  else
    mkdir -p world
    cd world
    s3cmd get --recursive s3://${AWS_BUCKET}/${WORLD_NAME}/world/
    cd ..
  fi
  rm .s3cfg
fi
